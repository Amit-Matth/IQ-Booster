<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingVertical="12dp"
    android:paddingHorizontal="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="72dp" 
        android:layout_height="72dp"
        android:layout_marginEnd="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/level_icon_card"
            android:layout_width="60dp" 
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp" 
            app:cardElevation="4dp"
            android:background="@drawable/level_card_background"
            app:cardUseCompatPadding="false"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/level_icon_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="10dp" 
                tools:srcCompat="@drawable/ic_lock"
                android:contentDescription="Level Icon" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/level_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="6"
                android:textStyle="bold"
                android:textColor="@color/neon_cyan"
                android:fontFamily="@font/tech_font"
                android:letterSpacing="0.02"
                tools:text="Level 1: Genesis Matrix" />

            <ImageView
                android:id="@+id/level_status_indicator_image_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/ic_success_matrix" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp" 
            android:visibility="gone"
            tools:visibility="visible">

            <ProgressBar
                android:id="@+id/level_item_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/badge_progress_bar" 
                android:max="100"
                tools:progress="50" />

            <TextView
                android:id="@+id/level_item_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textColor="@color/neon_purple"
                android:fontFamily="@font/tech_font"
                android:textSize="12sp"
                tools:text="500 / 1000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>