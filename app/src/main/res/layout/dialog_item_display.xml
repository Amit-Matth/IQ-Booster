<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:background="@drawable/futuristic_dialog_background">

    <FrameLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_gravity="center">

        <View
            android:id="@+id/dialog_outer_glow_ring" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/holographic_outer_ring"
            android:layout_margin="4dp" />

        <View
            android:id="@+id/dialog_inner_glow_ring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/holographic_inner_ring"
            android:layout_margin="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:clipToOutline="true"
            android:background="@drawable/neon_card_background">

            <ImageView
                android:id="@+id/dialog_item_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/round_icon"
                android:contentDescription="Quiz Item Image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/holographic_overlay"
                android:alpha="0.3" />

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|start"
            android:background="@drawable/corner_accent_tl"
            android:layout_margin="8dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:background="@drawable/corner_accent_tr"
            android:layout_margin="8dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|start"
            android:background="@drawable/corner_accent_bl"
            android:layout_margin="8dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/corner_accent_br"
            android:layout_margin="8dp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/data_stream_animation" />

    <TextView
        android:id="@+id/dialog_item_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/neon_cyan"
        android:fontFamily="@font/futuristic_font"
        android:shadowColor="@color/neon_cyan_glow"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:letterSpacing="0.05"
        tools:text="QUANTUM DATA" />

    <TextView
        android:id="@+id/dialog_item_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:textColor="@color/tech_white"
        android:fontFamily="@font/tech_font"
        android:background="@drawable/description_background"
        android:padding="12dp"
        android:alpha="0.9"
        tools:text="Advanced neural network processing unit with quantum encryption protocols." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/tech_line_gradient" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/tech_diamond"
            app:tint="@color/neon_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/tech_line_gradient" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_fullscreen_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="FULLSCREEN"
            android:textColor="@color/neon_cyan"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:icon="@drawable/ic_fullscreen"
            app:iconSize="20dp"
            app:iconTint="@color/neon_cyan"
            android:background="@drawable/futuristic_button_primary"
            app:backgroundTint="@null" 
            android:fontFamily="@font/tech_font"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_download_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="DOWNLOAD"
            android:textColor="@color/neon_purple"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:icon="@drawable/ic_download"
            app:iconSize="20dp"
            app:iconTint="@color/neon_purple"
            android:background="@drawable/futuristic_button_secondary"
            app:backgroundTint="@null" 
            android:fontFamily="@font/tech_font"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_close_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CLOSE"
        app:icon="@drawable/ic_close"
        android:textColor="@color/error_red"
        app:strokeColor="@color/error_red"
        android:fontFamily="@font/tech_font"
        android:letterSpacing="0.1"
        app:iconSize="20dp"
        app:iconTint="@color/error_red"
        app:cornerRadius="12dp" />

    <ProgressBar
        android:id="@+id/dialog_download_progress_bar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:indeterminateTint="@color/neon_cyan"
        android:visibility="gone" />

</LinearLayout>
