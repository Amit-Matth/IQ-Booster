<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_profile_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/progress_fragment_nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/level_progression_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/neon_cyan_glow"
                app:strokeWidth="1dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/profile_card_background"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level Progression"
                        android:textColor="@color/neon_cyan"
                        android:fontFamily="@font/futuristic_font"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:shadowColor="@color/neon_cyan"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="8"
                        android:layout_marginBottom="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/levels_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="5"
                        tools:listitem="@layout/item_level"
                        tools:itemCount="10"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/next_level_progress_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress to Next Level"
                        android:textColor="@color/tech_white"
                        android:fontFamily="@font/tech_font"
                        android:textSize="18sp"
                        android:alpha="0.9"
                        android:layout_marginBottom="8dp"/>

                    <ProgressBar
                        android:id="@+id/next_level_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:progressDrawable="@drawable/badge_progress_bar"
                        android:layout_height="12dp"
                        android:layout_marginBottom="8dp"
                        android:max="100"
                        tools:progress="60"/>

                    <TextView
                        android:id="@+id/next_level_score_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@color/tech_white"
                        android:fontFamily="@font/tech_font"
                        android:textSize="14sp"
                        android:alpha="0.8"
                        tools:text="1200 / 1700 points"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/achievements_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/neon_purple" 
                app:strokeWidth="1dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/profile_card_background"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievements Unlocked"
                        android:textColor="@color/neon_purple" 
                        android:fontFamily="@font/futuristic_font"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:shadowColor="@color/neon_purple" 
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="8"
                        android:layout_marginBottom="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/badges_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_badge"
                        tools:itemCount="4"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_fragment_progress_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center" 
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/futuristic_progress_ring"
        android:visibility="gone"
        tools:visibility="visible"/>

</FrameLayout>