<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_profile_background"
    android:padding="24dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/signInActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical" 
            android:visibility="visible">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:text="AI Math â€“ Simple Practice, Smarter You!"
                android:textColor="@color/neon_cyan"
                android:fontFamily="@font/futuristic_font"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:shadowColor="@color/neon_cyan_glow"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_horizontal"
                android:text="Get Started Now!"
                android:textColor="@color/tech_white"
                android:fontFamily="@font/tech_font"
                android:textSize="20sp"
                android:alpha="0.9"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" 
                android:layout_gravity="center_horizontal"
                android:src="@drawable/math_login_img"
                android:scaleType="centerInside"
                android:layout_marginBottom="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signInWithGoogleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/google_logo_vector"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="12dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="16dp"
                app:elevation="8dp"
                android:textColor="@color/plasma_pink"
                app:iconTint="@null"
                app:iconPadding="16dp"
                android:background="@drawable/futuristic_button_secondary"
                android:textAllCaps="true"
                android:text="Sign in with google"
                android:fontFamily="@font/tech_font"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/futuristic_progress_ring"
        android:visibility="gone"
        tools:visibility="visible"/>

</FrameLayout>