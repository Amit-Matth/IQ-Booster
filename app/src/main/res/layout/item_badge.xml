<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/badge_item_background">

    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="16dp">

        <View
            android:id="@+id/badge_glow_ring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/badge_glow_ring"
            android:visibility="gone" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badge_card"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="false"
            android:clipToOutline="true"
            android:background="@drawable/badge_card_background">

            <ImageView
                android:id="@+id/badge_icon_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="10dp"
                tools:src="@drawable/ic_trophy"
                android:contentDescription="Achievement Badge" />

            <View
                android:id="@+id/badge_achievement_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/badge_achievement_overlay"
                android:alpha="0.3"
                android:visibility="gone" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/badge_hex_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hexagonal_frame"
            android:visibility="gone"
            android:tint="@color/neon_green" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/badge_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/neon_purple"
            android:fontFamily="@font/futuristic_font"
            android:letterSpacing="0.02"
            android:shadowColor="@color/neon_purple"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            android:layout_marginBottom="4dp"
            tools:text="QUANTUM MASTER" />

        <TextView
            android:id="@+id/badge_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/tech_white"
            android:fontFamily="@font/tech_font"
            android:alpha="0.8"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="6dp"
            tools:text="Complete 50 quantum physics challenges" />

        <LinearLayout
            android:id="@+id/badge_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/badge_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:progressDrawable="@drawable/badge_progress_bar"
                android:max="100"
                tools:progress="65" />

            <TextView
                android:id="@+id/badge_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/neon_cyan"
                android:fontFamily="@font/tech_font"
                android:textStyle="bold"
                tools:text="32/50" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/badge_status_icon_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_success_matrix" />

</LinearLayout>