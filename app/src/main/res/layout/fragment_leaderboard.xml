<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_profile_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/leaderboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="RANKING MATRIX"
            android:textColor="@color/neon_cyan"
            android:fontFamily="@font/futuristic_font"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:shadowColor="@color/neon_cyan_glow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="false"
            android:layout_marginBottom="6dp">

            <LinearLayout
                android:id="@+id/userDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/profile_card_background"
                android:padding="12dp">

                <TextView
                    android:id="@+id/currentUserTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR CURRENT STATUS"
                    android:textColor="@color/neon_purple"
                    android:fontFamily="@font/tech_font"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/tech_line_gradient_thin"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/userBottomImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/user" />

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userBottomName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Cmdr_User_01"
                            android:textColor="@color/neon_cyan"
                            android:fontFamily="@font/futuristic_font"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:shadowColor="@color/neon_cyan_glow"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="6"/>

                        <TextView
                            android:id="@+id/userBottomScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Score: 7,850,000"
                            android:textColor="@color/tech_white"
                            android:fontFamily="@font/tech_font"
                            android:alpha="0.8"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/userBottomLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="LVL 99"
                        android:textColor="@color/neon_purple"
                        android:fontFamily="@font/tech_font"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        android:shadowColor="@color/neon_purple"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="4"/>

                    <TextView
                        android:id="@+id/userBottomRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="#1"
                        android:textColor="@color/neon_green"
                        android:fontFamily="@font/futuristic_font"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:shadowColor="@color/neon_green_glow"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="8"/>
                </LinearLayout>

                <View
                    android:id="@+id/noteTextSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/tech_line_gradient_thin"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/noteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tech_gray"
                    android:fontFamily="@font/tech_font"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:text="Ranking Protocol: Higher scores &amp; efficient processing prioritized. Matrix integrity under continuous recalibration."
                    android:visibility="gone"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/leaderboardRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:visibility="visible"
                tools:visibility="visible"
                tools:listitem="@layout/item_leaderboard_entry" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ProgressBar
            android:id="@+id/loadingUserProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:indeterminateDrawable="@drawable/futuristic_progress_ring"
            android:visibility="gone"
            tools:visibility="visible"/>
    </FrameLayout>

</FrameLayout>