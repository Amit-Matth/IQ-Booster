<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_profile_background"
    android:padding="24dp" 
    tools:context=".fragments.QuizResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textColor="@color/neon_cyan"
            android:fontFamily="@font/futuristic_font"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:shadowColor="@color/neon_cyan_glow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="false"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/profile_card_background"
                android:padding="20dp">

                <TextView 
                    android:id="@+id/total_questions_summary_text_view" 
                    tools:text="Total Questions: 10"
                    android:textColor="@color/tech_white"
                    android:fontFamily="@font/tech_font"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView 
                    android:id="@+id/correct_questions_summary_text_view" 
                    tools:text="Correct Questions: 7"
                    android:textColor="@color/neon_green"
                    android:fontFamily="@font/tech_font"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView 
                    android:id="@+id/wrong_questions_summary_text_view" 
                    tools:text="Wrong Questions: 2"
                    android:textColor="@color/error_red" 
                    android:fontFamily="@font/tech_font"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView 
                    android:id="@+id/skipped_questions_summary_text_view" 
                    tools:text="Skipped Questions: 1"
                    android:textColor="@color/warning_yellow"
                    android:fontFamily="@font/tech_font"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/profile_card_background"
                android:gravity="center_horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score Matrix" 
                    android:textColor="@color/tech_white"
                    android:fontFamily="@font/tech_font"
                    android:alpha="0.8"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/score_from_correct_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Correct Score: 7 x 3 = 21"
                    android:textColor="@color/neon_green_glow"
                    android:fontFamily="@font/tech_font"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/penalty_from_wrong_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Wrong Penalty: 2 x -3 = -6"
                    android:textColor="@color/error_red_glow"
                    android:fontFamily="@font/tech_font"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final Score Output" 
                    android:textColor="@color/tech_white"
                    android:fontFamily="@font/tech_font"
                    android:alpha="0.8"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                    
                 <TextView
                    android:id="@+id/final_score_summary_text_view"
                    tools:text="15"
                    android:textColor="@color/neon_green"
                    android:fontFamily="@font/futuristic_font"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/neon_green_glow"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="12"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Return to Selection"
            android:textColor="@color/neon_purple"
            android:fontFamily="@font/tech_font"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            app:backgroundTint="@null"
            android:background="@drawable/futuristic_button_secondary"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/quiz_results_progress_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/futuristic_progress_ring"
        android:visibility="gone"
        tools:visibility="visible"/>

</FrameLayout>