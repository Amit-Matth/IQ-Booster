<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#22FF4444"
                android:centerColor="#11AA2222"
                android:endColor="#22FF4444"
                android:angle="135" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#66FF4444" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>