<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unlocked State -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#2200FFFF"
                        android:centerColor="#1A1A2E"
                        android:endColor="#16213E"
                        android:angle="135" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#6600FFFF" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Locked State -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#1A1A1A"
                        android:centerColor="#0F0F0F"
                        android:endColor="#151515"
                        android:angle="135" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#333333" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
