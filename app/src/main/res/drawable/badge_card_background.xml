<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#2200FF88"
                        android:centerColor="#1A1A2E"
                        android:endColor="#16213E"
                        android:angle="135" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="#66FF00FF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Locked Badge -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#1A1A1A"
                        android:centerColor="#0F0F0F"
                        android:endColor="#151515"
                        android:angle="135" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#444444" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
