<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Example: <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <!-- Theme for activities without an ActionBar (Dark) -->
    <style name="NoAppAndBottomBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- For dark status bar icons (if status bar bg is light) or adapt as needed -->
    </style>

    <!-- Theme for the Splash Screen (Dark) -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_background</item> <!-- Or your dark splash drawable -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
    </style>

    <!-- Styles for QuestionsActivity - generally can be the same unless specific dark overrides are needed -->
    <style name="QuizOptionRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/option_background_selector</item>
        <item name="android:textColor">@color/optionTextColor</item> <!-- Ensure this color adapts or is defined for dark theme -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SummaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/questionTextColor</item> <!-- Ensure this color adapts or is defined for dark theme -->
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>